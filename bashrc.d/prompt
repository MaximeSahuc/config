export PS1_USERNAME_COLOR=`[ $(whoami) = 'root' ] && echo -e "\[$(tput setaf 196)\]" || echo -e "\[$(tput setaf 214)\]"`
export PS1="$PS1_USERNAME_COLOR\u\[$(tput setaf 7)\]@\[$(tput setaf 213)\]\h \[$(tput setaf 75)\]\w\n\[$(tput setaf 216)\]▷  \[$(tput sgr0)\]"
export PROMPT_COMMAND='EXIT_CODE=$?; ([[ $EXIT_CODE -ne 0 && $EXIT_CODE -ne 130 ]] && echo -en "\e[38;5;196m\n౷ \033[0m\n\n\n" || echo -e "\n\n")'