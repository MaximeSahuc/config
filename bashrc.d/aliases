alias dps='docker ps -a --format "table {{.Status}}\t{{.Names}}\t{{.Ports}}"'
alias ruff_fmt='ruff check --fix . ; ruff check --select I --fix . ; ruff format .'
alias codium='flatpak run com.vscodium.codium '
alias sync='rsync -aAX --progress '

mkcd () {
    mkdir -p "$1" && cd "$_"
}

alias ls='ls --color=always'
alias l='ls --color=always -lAh'

alias screenshot='gnome-screenshot -ca -f "$HOME/Pictures/Screenshots/$(date +"%Y-%m-%d_%H-%M").jpg"'

alias ipa='ip -br -c a'
alias vpn='sudo openvpn --config /etc/openvpn/client/config.ovpn --auth-user-pass /etc/openvpn/client/credentials.auth'
alias download-website='wget -rxp -l 0 -e robots=off -U mozilla --convert-links --html-extension '
